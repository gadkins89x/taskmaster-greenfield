{
  "name": "taskmaster",
  "version": "0.1.0",
  "private": true,
  "description": "TaskMaster CMMS - Computerized Maintenance Management System",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "docker compose up -d && pnpm run dev:apps",
    "dev:apps": "pnpm run -r --parallel dev",
    "dev:api": "pnpm --filter @taskmaster/api dev",
    "dev:pwa": "pnpm --filter @taskmaster/pwa dev",
    "build": "pnpm run -r build",
    "build:api": "pnpm --filter @taskmaster/api build",
    "build:pwa": "pnpm --filter @taskmaster/pwa build",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",
    "test:e2e": "pnpm run -r test:e2e",
    "db:migrate": "pnpm --filter @taskmaster/api prisma:migrate",
    "db:seed": "pnpm --filter @taskmaster/api prisma:seed",
    "db:studio": "pnpm --filter @taskmaster/api prisma:studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose -f docker-compose.prod.yml build",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "author": "TaskMaster Team",
  "license": "UNLICENSED",
  "pnpm": {
    "onlyBuiltDependencies": [
      "prisma",
      "@prisma/engines",
      "@prisma/client",
      "argon2",
      "esbuild",
      "@nestjs/core"
    ]
  }
}
