FROM node:22-alpine

# Install pnpm and curl for healthchecks
RUN apk add --no-cache curl && \
    corepack enable && \
    corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy root workspace config files (context is repo root)
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy package.json files for workspace packages
COPY apps/pwa/package.json ./apps/pwa/
COPY packages/shared/package.json ./packages/shared/

# Install all dependencies
RUN pnpm install --frozen-lockfile

# Set working directory to pwa app
WORKDIR /app/apps/pwa

# Copy pwa source (will be overwritten by volume mount in dev)
COPY apps/pwa/ ./

EXPOSE 5173

# Use vite dev server with host flag for Docker access
CMD ["pnpm", "run", "dev", "--", "--host", "0.0.0.0"]
