# Database
DATABASE_URL=postgresql://taskmaster:taskmaster@localhost:5432/taskmaster?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=dev-secret-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./storage

# Application
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=debug

# Web Push (VAPID) - Generate with: npx web-push generate-vapid-keys
VAPID_SUBJECT=mailto:admin@taskmaster.local
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@taskmaster.local
