FROM node:22-alpine

# Install dependencies for native modules and pnpm
RUN apk add --no-cache python3 make g++ curl && \
    corepack enable && \
    corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy root workspace config files (context is repo root)
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy package.json files for workspace packages
COPY apps/api/package.json ./apps/api/
COPY packages/shared/package.json ./packages/shared/

# Copy prisma schema for generation
COPY apps/api/prisma ./apps/api/prisma/

# Install all dependencies (not using frozen-lockfile in dev for flexibility)
RUN pnpm install

# Generate Prisma client
WORKDIR /app/apps/api
RUN pnpm prisma generate

# Copy api source (will be overwritten by volume mount in dev)
COPY apps/api/ ./

EXPOSE 3000

# Use nest start --watch for hot reload
CMD ["pnpm", "run", "start:dev"]
